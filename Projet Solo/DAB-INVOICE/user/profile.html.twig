{% extends 'base.html.twig' %}

{% block title %}Édition de votre profil{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('profile') }}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-4 py-2">
        <div class="row gx-4 mt-4">
            <div class="col-lg-7 col-md-12 mt-4">
                <div class="card">
                    <div class="card-header p-3 pb-0">
                        <h6 class="mb-1">Informations personnelles</h6>
                    </div>
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-lg-6">
                                <label class="form-label" for="email">Adresse email</label>
                                <div class="form-group">
                                    <input id="email" class="form-control" type="email"
                                           placeholder="nom@exemple.com"
                                           value="{{ profile.email }}"
                                    />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label class="form-label" for="firstname">Prénom</label>
                                <div class="form-group">
                                    <input id="firstname" class="form-control" type="text"
                                           placeholder="Prénom"
                                           value="{{ profile.firstname }}"
                                    />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <label class="form-label" for="lastname">Nom</label>
                                <div class="form-group">
                                    <input id="lastname" class="form-control" type="text"
                                           placeholder="nom@exemple.com"
                                           value="{{ profile.lastname }}"
                                    />
                                </div>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-lg-8 col-12 actions text-end ms-auto">
                                <button id="submitProfileButton" class="btn bg-gradient-primary btn-sm mb-0"
                                        type="button">
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-header p-3 pb-0">
                        <h6 class="mb-1">Personnalisation</h6>
                    </div>
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-md-8">
                                <div>
                                    <label>Avatar</label>
                                    <div>
                                        <input type="file" id="avatarFile" class="form-control" accept="{{ constant("App\\Entity\\User::AVATAR_TYPE")|join(', ') }}" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 d-flex flex-column align-items-md-center">
                                <div class="mt-md-0 mt-4">
                                    <img id="avatarPreview" alt="avatar preview" class="rounded-circle" src="{{ profile.avatarName ? asset("/user/avatar/#{profile.avatarName}") : asset('build/img/user-default-icon.jpg') }}" style="width: 125px; height: 125px; object-fit:cover;">
                                </div>
                                <div id="formAvatarDelete" class="form-check mt-2 {{ profile.avatarName is empty ? 'd-none' : '' }}">
                                    <label for="avatarDelete">Supprimer l'avatar</label>
                                    <input type="checkbox" id="avatarDelete" class="form-check-input">
                                </div>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-lg-8 col-12 actions text-end ms-auto">
                                <button id="submitAvatarButton" class="btn bg-gradient-primary btn-sm mb-0"
                                        type="button">
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-md-12 mt-4">
                <div class="card">
                    <div class="card-header p-3 pb-0">
                        <h6 class="mb-1">Édition du mot de passe</h6>
                    </div>
                    <div class="card-body p-3">
                        <label class="form-label" for="currentPassword">Mot de passe actuel</label>
                        <div class="form-group">
                            <input id="currentPassword" class="form-control" type="password"
                                   placeholder="Mot de passe actuel"/>
                        </div>
                        <label class="form-label" for="newPassword">Nouveau mot de passe</label>
                        <div class="form-group">
                            <input id="newPassword" class="form-control" type="password"
                               placeholder="Nouveau mot de passe"/>
                        </div>
                        <label class="form-label" for="newPasswordConfirm">Confirmez votre nouveau mot de passe</label>
                        <div class="form-group">
                            <input id="newPasswordConfirm" class="form-control" type="password"
                            placeholder="Confirmez votre nouveau mot de passe"/>
                            <span class="text-xs font-weight-normal">{{ constant("App\\Entity\\User::PASSWORD_PATTERN_HELP") }}</span>
                        </div>
                        <div class="row mt-5">
                            <div class="col-lg-8 col-12 actions text-end ms-auto">
                                <button id="submitPasswordButton" class="btn bg-gradient-primary btn-sm mb-0"
                                        type="button">
                                    Enregistrer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
