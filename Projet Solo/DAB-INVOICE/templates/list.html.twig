{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>

    {% if clients is not empty %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Adresse</th>
                    <th>Date de Création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.id }}</td>
                        <td>{{ client.name }}</td>
                        <td>{{ client.address }}</td>
                        <td>{{ client.createdAt|date('Y-m-d H:i') }}</td>
                        <td>
                            <a href="{{ path('admin_client_edit', {'id': client.id}) }}" class="btn btn-primary btn-sm">
                                Modifier
                            </a>
                            <a href="{{ path('admin_client_archive', {'id': client.id}) }}" class="btn btn-warning btn-sm" onclick="return confirm('Êtes-vous sûr d\'archiver ce client ?');">
                                Archiver
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun client trouvé.</p>
    {% endif %}
{% endblock %}
