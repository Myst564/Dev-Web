<div id="flash_message_container" class="position-fixed bottom-6 end-1 z-index-2">
    {% set frontFlashMessages = constant("App\\Helper\\ApiMessages::FRONT_MESSAGES") %}
    {% for type in ['success', 'warning', 'danger', 'primary', 'secondary', 'info'] %}
        {% for id, flashMessage in app.session.flashbag.get(type) %}
            <div id="flash_message_{{ type }}_{{ id }}"
                 class="flash_message toast fade hide bg-transparent mt-3"
                 role="alert"
                 aria-live="assertive"
                 aria-atomic="true"
                 data-type="{{ type }}"
                 data-id="{{ id }}"
            {% if getParameter('app.env') is same as 'test' %}
                 data-bs-autohide="false"
            {% else %}
                 data-bs-delay="10000"
            {% endif %}
            >
                <div class="toast-header p-3 border-0 bg-gradient-{{ type }}">
                    <i class="me-2 ni ni-notification-70"></i>
                    <span class="me-auto font-weight-bold">
                        {{ frontFlashMessages[type] }}
                    </span>
                    <i class="fas fa-times text-md ms-3 cursor-pointer" data-bs-dismiss="toast" aria-label="Close"></i>
                </div>
                <div class="toast-body bg-white px-4 pt-4 pb-3">
                    {{ flashMessage|raw }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
